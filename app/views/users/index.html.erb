<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', user:@user %>
        <%= render 'users/newbook', book:@book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <span>
                <td><%= attachment_image_tag user, :profile_image, :fill, 10, 10, format:'jpg', fallback: "no_image.jpg",size:'40x40' %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user) %></td>
                </span>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>