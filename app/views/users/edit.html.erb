<div class="container px-5 px-sm-0">
    <div class="row">
  <% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
      <div class="col-md-8 offset-md-1">
        <main>
        <p id="notice"></p>
        <%= form_with model: @user, local:true do |f| %>
        <div class="container">
          <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
              <h2>User info</h2>
              <div class="form-group">
                <label for="user_name">Name</label><br>
                <%= f.text_field :name, class:"form-control name" %>
              </div>
              <div class="form-group">
                <label for="user_image">Image</label><br>
                <%= f.attachment_field :profile_image %>
              </div>
              <div class="form-group">
                <label for="user_introduction">Introduction</label><br>
                <%= f.text_area :introduction, class:"form-control introduction" %>
              </div>
              <div class="form-group">
                <div class="d-grid gap-2">
                   <%= f.submit 'Update User', class:"btn btn-secondary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        </main>


      </div>
    </div>
</div>