<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', user:@user %>
        <%= render 'users/newbook', book:@book_new %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <tbody>
              <% @books.each do |books|%>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag books.user, :profile_image, :fill, 10, 10, format:'jpg', fallback: "no_image.jpg",size:'40x40' %>
                <% end %>
              </td>
              <td>
                <%= link_to books.title, book_path(books) %>
              </td>
              <td>
                <%= books.body %>
              </td>
            </tr>
            <% end %>
          </tbody>

        </table>



      </div>
    </div>
</div>